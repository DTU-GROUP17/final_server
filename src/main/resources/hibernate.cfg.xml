<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">
            org.hibernate.dialect.MySQLDialect
        </property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>

        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/cdio_f</property>
        <property name="show_sql">true</property>
        <mapping class="models.User"/>
        <mapping class="models.Role"/>
        <mapping class="models.WeightsEntity"/>
        <mapping class="models.UsersEntity2"/>
        <mapping class="models.WeighingsEntity2"/>
        <mapping class="models.WeightsEntity2"/>
        <mapping class="models.Component"/>
        <mapping class="models.Ingredient"/>
        <mapping class="models.Material"/>
        <mapping class="models.ProductBatch"/>
        <mapping class="models.Recipe"/>
        <mapping class="models.Role"/>
        <mapping class="models.Supplier"/>
        <mapping class="models.User"/>
        <mapping class="models.Weighing"/>
        <mapping class="models.Weight"/>

    </session-factory>
</hibernate-configuration>